<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClimaDetalladoActivity">

    <TextView
        android:id="@+id/textViewTituloCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clima Detallado"
        android:textSize="24sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewVelocidadViento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velocidad del Viento: "
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloCiudad"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewHoraPuestaSol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de Puesta del Sol: "
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewVelocidadViento"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewClimaPorHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clima por Hora: "
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHoraPuestaSol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewDetallesAdicionales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detalles Adicionales: "
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewClimaPorHora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
